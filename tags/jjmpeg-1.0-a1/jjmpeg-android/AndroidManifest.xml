<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="au.notzed.jjmpeg"
		  android:versionCode="1"
		  android:versionName="1.0"
		  android:debuggable="true"
>
	<uses-sdk android:targetSdkVersion="11" android:minSdkVersion="11" />
	<uses-feature android:glEsVersion="0x00020000" android:required="true" />
	<uses-permission android:name="android.permission.INTERNET" />
	<application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
		<activity android:name="au.notzed.jjmpeg.mediaplayer.AndroidMediaPlayer"
				  android:label="@string/app_name"
		>
<!--
				  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
-->
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="video/*" />
				<data android:scheme="http" android:mimeType="video/*" />
				<data android:scheme="file" android:mimeType="video/*" />
				<data android:scheme="content" android:mimeType="video/*" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="audio/*" />
				<data android:scheme="http" android:mimeType="audio/*" />
				<data android:scheme="file" android:mimeType="audio/*" />
				<data android:scheme="content" android:mimeType="audio/*" />
			</intent-filter>
		</activity>
		<activity android:name="au.notzed.jjmpeg.mediaplayer.SettingsActivity"
				  android:label="Preferences"
				  android:exported="false"
				  android:excludeFromRecents="true"
				  android:windowSoftInputMode="stateHidden">
	<!--			  android:theme="@android:style/Theme.Dialog" -->

		</activity>

	</application>
</manifest>
